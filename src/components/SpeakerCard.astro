---
interface Props {
  name: string;
  title: string;
  description: string;
  image: string;
}

const { name, title, description, image } = Astro.props;
---
<div class="bg-white rounded-2xl overflow-hidden shadow-md flex flex-col">
  <img src={image} alt={name} class="w-full h-56 object-cover cards" loading="eager">
  <div class="p-6">
    <h3 class="text-lg font-semibold mb-2">{name}</h3>
    <p class="text-accent font-bold mb-2">{title}</p>
    <p class="text-sm text-gray-600">{description}</p>
  </div>
</div>

<style>
  .cards{
    height: 21rem !important;
  }
</style>